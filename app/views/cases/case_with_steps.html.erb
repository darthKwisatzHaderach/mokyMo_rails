<div id="case_progress" class="row">
  <div align="center" class="wizard col-lg-12">
      <a><span class="badge">1</span>Создание тестового сценария</a>      
      <a><span class="badge">2</span>Описание шагов и ожидаемого результата</a>
      <a class="current"><span class="badge badge-inverse">3</span>Предпросмотр сценария</a>      
  </div>
</div>

<div class="row">	

    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-3">
          <h4 align="right">Название:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.title %></h4>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <h4 align="right">Тест-комплект:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.suite.title %></h4>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-3">
          <h4 align="right">Приоритет:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.priority %></h4>
        </div>
      </div>
      
      <div class="row">
        <div class="col-lg-3">
          <h4 align="right">Планируемое время (мин):</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.planned_duration %></h4>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <h4 align="right">Тэги:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.tags %></h4>
        </div>
      </div>

      <div class="row" style="padding-bottom:5px">
        <div class="col-lg-3">
          <h4 align="right">Описание функциональности:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.objective %></h4>
        </div>
      </div>
      
      <div class="row" style="padding-bottom:5px">
        <div class="col-lg-3">
          <h4 align="right">Тестовые данные:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.test_data %></h4>
        </div>
      </div>
      
      <div class="row" style="padding-bottom:5px">
        <div class="col-lg-3">
          <h4 align="right">Предусловия:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.preconditions %></h4>
        </div>
      </div>
      
      <div class="row" style="padding-bottom:5px">
        <div class="col-lg-3">
          <h4 align="right">Комментарий:</h4>
        </div>
        <div class="col-lg-9">
          <h4><%= @case.comment %></h4>
        </div>
      </div>                

      <div class="row" style="padding-bottom:5px">
        <div class="col-lg-12">
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>№</th>
                <th>Шаг</th>
                <th>Ожидаемый результат</th>                
              </tr>
            </thead>
            <tbody>
              <% @steps.each_with_index do |s, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= s.step %></td>
                  <td><%= s.step_result %></td>                  
                </tr>          
              <% end %>        
            </tbody>
          </table>    
        </div>
      </div>    

    </div>  
</div>