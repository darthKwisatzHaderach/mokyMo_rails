div.bord.row
	h4#notice = notice
    h2 align="center" Тест-комплект
    hr
    div.col-lg-12
      div.row
        div.col-lg-3
          h4 align="right"
            b Название:
        div.col-lg-9
          h4 = @suite.title
      div.row
        div.col-lg-3
          h4 align="right"
            b Приоритет:
        div.col-lg-9
          h4 = @suite.priority
      div.row
        div.col-lg-3
          h4 align="right"
            b Тэги:
        div.col-lg-9
          h4 = @suite.tags
      div.row
        div.col-lg-3
          h4 align="right"
            b Компонент:
        div.col-lg-9
          h4 = @suite.component.title
      div.row
        div.col-lg-8
        div.col-lg-2
          = link_to 'Тест-комплекты', suites_path, class: "btn btn-default col-lg-12"
        div.col-lg-2
          = link_to 'Редактировать', edit_suite_path(@suite), class: "btn btn-default col-lg-12"